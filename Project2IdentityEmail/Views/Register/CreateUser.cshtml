@model Project2IdentityEmail.Dtos.CreateUserRegisterDto
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<form method="post">
<div class="container">
    <br />
    <h3>Yeni Kullanıcı Kaydı</h3>
    <label>Adınız</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />
     <label>Soyadınız</label>
    <input type="text" asp-for="Surname" class="form-control" />
    <br />
     <label>Kullanıcı Adınız</label>
    <input type="text" asp-for="Username" class="form-control" />
    <br />
     <label>Email Adresiniz</label>
    <input type="text" asp-for="Email" class="form-control" />
    <br />
    <label>Şifreniz</label>
    <input type="text" required asp-for="Password" class="form-control" />
    <br />
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <button class="btn btn-info">Kayıt Ol</button>
</div>
</form>
