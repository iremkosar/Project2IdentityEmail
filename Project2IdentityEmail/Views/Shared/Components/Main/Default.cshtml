@model List<Project2IdentityEmail.Entities.Message>

<div class="right-part mail-list bg-white">
    <div class="p-15 d-flex align-items-center do-block">
        <div class="btn-group my-1">
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input sl-all" id="cs">
                <label class="custom-control-label" for="cs">&nbsp;</label>
            </div>
        </div>
        <div class="btn-group mr-2" role="group" aria-label="Button group with nested dropdown">
            <div class="btn-group" role="group">
                <button id="btnGroupDrop1" type="button" class="btn btn-outline-secondary dropdown-toggle"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Filtrele (@(ViewBag.Mode == "sendbox" ? "Gidenler" : "Gelenler"))
                </button>
                <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                    <a class="dropdown-item" href="/Message/Inbox">Gelen Kutusu</a>
                    <a class="dropdown-item" href="/Message/Sendbox">Giden Kutusu</a>
                </div>
            </div>
        </div>
        <div class="ml-auto">
            <div class="btn-group">
                <button type="button" class="btn btn-default waves-effect"><i class="fa fa-chevron-left"></i></button>
                <button type="button" class="btn btn-default waves-effect"><i class="fa fa-chevron-right"></i></button>
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table email-table no-wrap table-hover v-middle">
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="cursor:pointer;" onclick="location.href='/Message/MessageDetail/@item.MessageId'">
                        <td class="chb">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="cst_@item.MessageId">
                                <label class="custom-control-label" for="cst_@item.MessageId">&nbsp;</label>
                            </div>
                        </td>
                        <td class="starred"><i class="far fa-star"></i></td>
                        <td class="user-image">
                            <img src="~/mendy-admin/package/assets/images/users/5.jpg" alt="user"
                                 class="rounded-circle" width="30">
                        </td>

                        <td class="user-name">
                            <h6 class="m-b-0">
                                @if (ViewBag.Mode == "sendbox")
                                {
                                    <span class="text-muted" style="font-size:11px;">Alıcı:</span> <br />
                                    <strong>@item.ReceiverEmail</strong>
                                }
                                else
                                {
                                    <span class="text-muted" style="font-size:11px;">Gönderen:</span> <br />
                                    <strong>@item.SenderEmail</strong>
                                }
                            </h6>
                        </td>

                        <td class="max-texts">
                            <a class="link" href="/Message/MessageDetail/@item.MessageId">
                                <span class="label label-info m-r-10">@item.Subject</span>
                                @(item.MessageDetail.Length > 50 ? item.MessageDetail.Substring(0, 50) + "..." : item.MessageDetail)
                            </a>
                        </td>
                        <td class="clip"><i class="fa fa-paperclip"></i></td>
                        <td class="time"> @item.SendDate.ToString("dd MMM") </td>
                    </tr>
                }

                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center p-4">Henüz bir mesaj bulunmuyor.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="p-15 m-t-30">
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <li class="page-item"><a class="page-link" href="javascript:void(0)">Geri</a></li>
                <li class="page-item active"><a class="page-link" href="javascript:void(0)">1</a></li>
                <li class="page-item"><a class="page-link" href="javascript:void(0)">İleri</a></li>
            </ul>
        </nav>
    </div>
</div>