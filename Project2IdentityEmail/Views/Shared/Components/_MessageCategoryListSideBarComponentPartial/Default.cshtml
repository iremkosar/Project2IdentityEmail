@model List<Category>

@foreach (var item in Model)
{
    string iconColor = "text-secondary";
    string bgColor = "rgba(0,0,0,0.05)";

    switch (item.CategoryName)
    {
        case "İş":
            iconColor = "text-primary";
            bgColor = "rgba(78,115,223,.12)";
            break;

        case "Aile":
            iconColor = "text-success";
            bgColor = "rgba(40,167,69,.12)";
            break;

        case "Sosyal":
            iconColor = "text-warning";
            bgColor = "rgba(255,193,7,.15)";
            break;

        case "Eğitim":
            iconColor = "text-info";
            bgColor = "rgba(23,162,184,.12)";
            break;
    }

    <li class="list-group-item border-0 p-0">
        <a asp-controller="MessageController1"
           asp-action="Inbox"
           asp-route-categoryId="@item.CategoryId"
           class="list-group-item-action category-link">

            <span class="category-icon" style="background:@bgColor">
                <i class="@item.CategoryIconurl @iconColor"></i>
            </span>

            @item.CategoryName
        </a>
    </li>
}

<style>
    .category-link {
        display: flex !important; /* önemli */
        align-items: center !important;
        gap: 10px;
        border-radius: 10px;
        padding: 8px 12px;
        transition: .15s ease-in-out;
    }

        .category-link i {
            display: inline-block;
        }

        .category-link:hover {
            background: rgba(0,0,0,.05);
            transform: translateX(3px);
        }

    .category-icon {
        width: 32px;
        height: 32px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 16px;
        flex-shrink: 0; /* küçülmesini engeller */
    }

</style>
