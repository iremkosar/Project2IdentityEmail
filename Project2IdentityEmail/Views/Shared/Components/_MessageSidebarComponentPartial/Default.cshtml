<div class="scrollable" style="height:100%;">

    <!-- Yeni Mesaj -->
    <div class="p-15 text-left">
        <a id="compose_mail"
           href="/MessageController1/ComposeMessage"
           class="compose-modern">
            <i class="mdi mdi-pencil mr-2"></i>
            Oluştur
        </a>
    </div>





    <div class="divider"></div>

    <!-- Dashboard (normal menü item) -->
    <ul class="list-group">

        <li class="list-group-item">
            <a href="/Dashboard/Index" class="list-group-item-action dashboard-link">
                <i class="mdi mdi-home mr-2"></i>
                Dashboard
            </a>
        </li>

        <li class="list-group-item">
            <hr>
        </li>

        <li>
            <small class="p-15 grey-text text-lighten-1 db">Folders</small>
        </li>

        <li class="list-group-item">
            <a href="/MessageController1/Inbox" class="list-group-item-action d-flex align-items-center justify-content-between">
                <span>
                    <i class="mdi mdi-inbox mr-1 text-primary"></i>
                    Gelen Kutusu
                </span>
                <span class="badge badge-pill badge-primary">@ViewBag.InboxCount</span>
            </a>
        </li>

        <li class="list-group-item">
            <a href="/MessageController1/Starred" class="list-group-item-action d-flex align-items-center justify-content-between">
                <span>
                    <i class="mdi mdi-star mr-1 text-warning"></i>
                    Yıldızlananlar
                </span>
                <span class="badge badge-pill badge-warning">@ViewBag.StarredCount</span>
            </a>
        </li>

        <li class="list-group-item">
            <a href="/MessageController1/Drafts" class="list-group-item-action d-flex align-items-center justify-content-between">
                <span>
                    <i class="mdi mdi-file-document mr-1 text-info"></i>
                    Taslaklar
                </span>
                <span class="badge badge-pill badge-info">@ViewBag.DraftCount</span>
            </a>
        </li>

        <li class="list-group-item">
            <a href="/MessageController1/Trash" class="list-group-item-action d-flex align-items-center justify-content-between">
                <span>
                    <i class="mdi mdi-delete mr-1 text-danger"></i>
                    Çöp Kutusu
                </span>
                <span class="badge badge-pill badge-danger">@ViewBag.TrashCount</span>
            </a>
        </li>

        <li class="list-group-item">
            <a href="/MessageController1/Sendbox" class="list-group-item-action d-flex align-items-center justify-content-between">
                <span>
                    <i class="mdi mdi-email mr-1 text-success"></i>
                    Giden Kutusu
                </span>
                <span class="badge badge-pill badge-success">@ViewBag.SendboxCount</span>
            </a>
        </li>


        <li class="list-group-item">
            <hr>
        </li>

        @await Component.InvokeAsync("_MessageCategoryListSideBarComponentPartial")

    </ul>
    <style>
        .list-group-item a.list-group-item-action {
            border-radius: 10px;
            padding: 10px 12px;
            transition: .15s ease-in-out;
        }

            .list-group-item a.list-group-item-action:hover {
                background: rgba(0,0,0,.04);
                transform: translateX(2px);
            }

        .badge.badge-pill {
            font-weight: 600;
            padding: .35rem .6rem;
        }


        /* 💖 Yeni Mesaj - gerçek buton gibi */
        /* Gmail tarzı Oluştur butonu */
        .compose-gmail {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            background: #fff !important;
            color: #3c4043 !important;
            border: 1px solid rgba(0,0,0,.12) !important;
            border-radius: 999px !important;
            padding: 12px 18px !important;
            font-weight: 700 !important;
            box-shadow: 0 1px 2px rgba(0,0,0,.08) !important;
            text-decoration: none !important;
            transition: .15s ease-in-out !important;
        }

            .compose-gmail i {
                width: 34px;
                height: 34px;
                border-radius: 999px;
                background: #ff4da6; /* pembe ikon balonu */
                color: #fff !important;
                display: inline-flex;
                align-items: center;
                justify-content: center;
                font-size: 18px;
            }

            .compose-gmail:hover {
                background: #fafafa !important;
                transform: translateY(-1px);
                box-shadow: 0 6px 14px rgba(0,0,0,.12) !important;
                color: #202124 !important;
            }

            .compose-gmail:active {
                transform: translateY(0px);
                box-shadow: 0 2px 6px rgba(0,0,0,.10) !important;
            }


            /* ikonun küçük yuvarlak arkaplanı */
        /* Modern Gmail tarzı Oluştur */
        .compose-modern {
            display: inline-flex;
            align-items: center;
            background: linear-gradient(135deg, #ff4da6, #ff007a) !important;
            color: #fff !important;
            padding: 10px 18px !important;
            border-radius: 12px !important; /* çok yuvarlak değil */

            font-weight: 700 !important;
            font-size: 14px;
            text-decoration: none !important;
            box-shadow: 0 8px 20px rgba(255, 0, 122, .25);
            transition: .18s ease-in-out;
        }

            .compose-modern i {
                font-size: 16px;
                color: #fff !important;
            }

            .compose-modern:hover {
                transform: translateY(-2px);
                box-shadow: 0 12px 26px rgba(255, 0, 122, .35);
                color: #fff !important;
            }

            .compose-modern:active {
                transform: translateY(0px);
            }



        /* 🏠 Dashboard */
        .dashboard-link {
            background: linear-gradient(135deg, #4e73df, #224abe) !important;
            color: #fff !important;
            border-radius: 12px !important;
            padding: 10px 12px !important;
            font-weight: 700 !important;
            box-shadow: 0 8px 18px rgba(34, 74, 190, .18) !important;
            transition: .15s ease-in-out !important;
        }

            .dashboard-link i {
                color: #fff !important;
            }

            .dashboard-link:hover {
                opacity: .92 !important;
                transform: translateX(2px) !important;
            }
   

    </style>

</div>

