@model Project2IdentityEmail.Entities.Message
@{
    Layout = "~/Views/Shared/_MailLayout.cshtml";
}

<h1 style="color:red">DETAIL VIEW GELDİ</h1>

<div class="card-body">
    <button type="button" onclick="history.back()" class="btn btn-outline-secondary font-18 m-r-10">
        <i class="mdi mdi-arrow-left"></i>
    </button>

    <div class="btn-group m-r-10" role="group">
        <button type="button" class="btn btn-outline-secondary font-18">
            <i class="mdi mdi-reply"></i>
        </button>
        <button type="button" class="btn btn-outline-secondary font-18">
            <i class="mdi mdi-delete"></i>
        </button>
    </div>
</div>

<div class="card-body border-top border-bottom bg-light">
    <h4 class="m-b-0">@Model.Subject</h4>
</div>

<div class="card-body border-bottom">
    <div class="d-flex no-block align-items-center m-b-40">
        <div class="m-r-10">
            <img src="~/mendy-admin/package/assets/images/users/1.jpg" alt="user" class="rounded-circle" width="45" />
        </div>

        <div>
            <h5 class="m-b-0 font-16 font-medium">
                @Model.SenderEmail <small>(Gönderen)</small>
            </h5>
            <span>Kime: @Model.ReceiverEmail</span>
        </div>

        <div class="ml-auto">
            <small>@Model.SendDate.ToString("dd MMM yyyy HH:mm")</small>
        </div>
    </div>

    <h4 class="m-b-15">Mesaj Detayı:</h4>
    <p style="white-space: pre-wrap;">@Model.MessageDetail</p>
</div>

<div class="card-body">
    <h4><i class="fa fa-paperclip m-r-10 m-b-10"></i> Ekler <span>(0)</span></h4>
    <div class="border m-t-20 p-15">
        <p class="p-b-20">Cevap yazmak için <a href="javascript:void(0)">buraya tıklayın</a>.</p>
    </div>
</div>
