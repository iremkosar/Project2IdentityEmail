@model List<Project2IdentityEmail.Entities.Message>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <h3>Gönderilen Mesaj Listesi</h3>
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Alıcı Email</th>
            <th>Konu</th>
            <th>Tarih</th>
            <th>Mesajı Aç</th>
            <th>Mesajı Sil</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MessageId</td>
                <td>@item.ReceiverEmail</td>
                <td>@item.Subject</td>
                <td>@item.SendDate.ToString("dd-MMM-yyyy")</td>
                <td><a href="/Message/MessageDetail/@item.MessageId" class="btn btn-info">Mesajı Aç</a></td>
                <td><a href="/Message/MessageDelete/@item.MessageId" class="btn btn-danger">Mesajı Sil</a></td>
            </tr>
        }
    </table>
</div>

