@model List<Message>
@{
    ViewData["Title"] = "Drafts";
    Layout = "~/Views/UserLayout/Index.cshtml";
}

<div class="left-part bg-white">
    @await Component.InvokeAsync("_MessageSidebarComponentPartial")
    <a class="ti-menu ti-close btn btn-success show-left-part d-block d-md-none" href="javascript:void(0)"></a>
</div>

<div class="right-part mail-list bg-white">
    <!-- Button group part -->
    <div class="p-15 d-flex align-items-center do-block">
        <div class="btn-group my-1">
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input sl-all" id="cs">
                <label class="custom-control-label" for="cs">&nbsp;</label>
            </div>
        </div>

        <div class="btn-group mr-2" role="group" aria-label="Button group with nested dropdown">
            <div class="btn-group" role="group">
                <button id="btnGroupDrop1" type="button" class="btn btn-outline-secondary dropdown-toggle"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Filter
                </button>
                <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                    <a class="dropdown-item" href="javascript:void(0)">Dropdown link</a>
                    <a class="dropdown-item" href="javascript:void(0)">Dropdown link</a>
                </div>
            </div>
        </div>

        <div class="ml-auto">
            <div class="btn-group">
                <button type="button" class="btn btn-default waves-effect"><i class="fa fa-chevron-left"></i></button>
                <button type="button" class="btn btn-default waves-effect"><i class="fa fa-chevron-right"></i></button>
            </div>
        </div>
    </div>

    <!-- Mail list-->
    <div class="table-responsive">
        <table class="table email-table no-wrap table-hover v-middle">
            <tbody>
                @foreach (var item in Model)
                {
                    string labelClass = "label-info";

                    switch (item.Category.CategoryName)
                    {
                        case "İş":
                            labelClass = "label-primary";
                            break;
                        case "Aile":
                            labelClass = "label-success";
                            break;
                        case "Sosyal":
                            labelClass = "label-warning";
                            break;
                        case "Eğitim":
                            labelClass = "label-purple";
                            break;
                        default:
                            labelClass = "label-secondary";
                            break;
                    }

                    <tr class="@(item.IsStatus ? "" : "unread")"
                        style="cursor:pointer;"
                        onclick="window.location.href='@Url.Action("MessageDetail","MessageController1", new { id = item.MessageId })'">

                        <!-- checkbox -->
                        <td class="chb">
                            <div class="custom-control custom-checkbox" onclick="event.stopPropagation();">
                                <input type="checkbox" class="custom-control-input" id="cst_@item.MessageId">
                                <label class="custom-control-label" for="cst_@item.MessageId">&nbsp;</label>
                            </div>
                        </td>

                        <!-- ⭐ STAR (tıklayınca satıra gitmesin) -->
                        <td class="starred">
                            <a href="javascript:void(0)"
                               class="js-star"
                               data-id="@item.MessageId"
                               title="Yıldızla"
                               onclick="event.stopPropagation();">
                                <i class="@(item.IsStarred ? "fas fa-star text-warning" : "far fa-star")"></i>
                            </a>
                        </td>

                        <!-- User -->
                        @* <td class="user-image"> *@
                        @*     <img src="~/mendy-admin/package/assets/images/users/4.jpg" alt="user" *@
                        @*          class="rounded-circle" width="30"> *@
                        @* </td> *@

                        <td class="user-name">
                            <h6 class="m-b-0">Gönderici</h6>
                        </td>

                        <td class="user-name">
                            <h6 class="m-b-0">@item.SenderEmail</h6>
                        </td>

                        <!-- Message -->
                        <td class="max-texts">
                            <a class="link"
                               asp-controller="MessageController1"
                               asp-action="MessageDetail"
                               asp-route-id="@item.MessageId"
                               onclick="event.stopPropagation();">
                                <span class="label @labelClass m-r-10">
                                    @item.Category.CategoryName
                                </span>
                                @Html.Raw(item.MessageDetail)
                            </a>
                        </td>


                        <!-- 🧾 Taslak + 🗑️ Çöp ikonları -->
                        <td class="mail-actions text-right" onclick="event.stopPropagation();">
                            <a href="javascript:void(0)"
                               class="js-draft mr-2"
                               data-id="@item.MessageId"
                               title="Taslaklara kaydet">
                                <i class="far fa-file-alt"></i>
                            </a>

                            <a href="javascript:void(0)"
                               class="js-trash"
                               data-id="@item.MessageId"
                               title="Çöp kutusuna at">
                                <i class="far fa-trash-alt"></i>
                            </a>
                        </td>

                        <!-- Time -->
                        <td class="time">
                            @item.SendDate.ToShortDateString()
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <style>
        .unread td {
            font-weight: 700;
        }

        /* ikonları hizalı ve şık göster */
        .mail-actions a {
            color: inherit;
        }

            .mail-actions a:hover {
                opacity: .8;
            }
    </style>
</div>

<script>
    async function postJson(url) {
        const res = await fetch(url, { method: "POST" });
        return await res.json();
    }

    // ⭐ STAR
    document.querySelectorAll(".js-star").forEach(el => {
        el.addEventListener("click", async (e) => {
            e.preventDefault();
            e.stopPropagation();

            const id = el.getAttribute("data-id");
            const data = await postJson(`/MessageController1/ToggleStar?id=${id}`);

            if (data && data.ok) {
                const icon = el.querySelector("i");
                if (data.starred) {
                    icon.className = "fas fa-star text-warning";
                } else {
                    icon.className = "far fa-star";
                }
            }
        });
    });

    // 🧾 DRAFT
    document.querySelectorAll(".js-draft").forEach(el => {
        el.addEventListener("click", async (e) => {
            e.preventDefault();
            e.stopPropagation();

            const id = el.getAttribute("data-id");
            const data = await postJson(`/MessageController1/ToggleDraft?id=${id}`);

            if (data && data.ok) {
                // Taslak yaptıysa inbox’tan kaldır
                if (data.draft) {
                    const row = el.closest("tr");
                    if (row) row.remove();
                }
            }
        });
    });

    // 🗑️ TRASH
    document.querySelectorAll(".js-trash").forEach(el => {
        el.addEventListener("click", async (e) => {
            e.preventDefault();
            e.stopPropagation();

            const id = el.getAttribute("data-id");
            const data = await postJson(`/MessageController1/ToggleTrash?id=${id}`);

            if (data && data.ok) {
                // Çöpe attıysa inbox’tan kaldır
                if (data.deleted) {
                    const row = el.closest("tr");
                    if (row) row.remove();
                }
            }
        });
    });
</script>




